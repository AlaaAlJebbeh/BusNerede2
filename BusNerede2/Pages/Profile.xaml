                        <StackLayout Orientation="Horizontal">
                            <Label Text="Phone Number:"
                                   TextColor="Black"
                                   FontAttributes="Bold"
                                   Margin="10,0,0,0"/>
                            <Label Text="05526235034"
                                   TextColor="Black"
                                   Margin="30,0,0,0"/>
                        </StackLayout>
                    </Frame>

                    <Frame BackgroundColor="White"
                           CornerRadius="10" 
                           Padding="3" 
                           WidthRequest="270"
                           HeightRequest="30"
