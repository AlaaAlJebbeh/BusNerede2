                           Grid.Row="0"
                           Grid.Column="1">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Number of Children:"
                                   TextColor="Black"
                                   FontAttributes="Bold"
                                   Margin="10,0,0,0"/>
