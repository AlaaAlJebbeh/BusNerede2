<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusNerede2.MainPage">


    <StackLayout>
        <Image Source="busnerede.png"
                   BackgroundColor="White"
                   WidthRequest="250"
                   HeightRequest="250"
                   Margin="60,20,20,0"/>

        <Frame BackgroundColor="black"
               CornerRadius="10" 
               Padding="3" 
               WidthRequest="300"
               Margin="0,0,30,20"
               BorderColor="Black">
            <Entry x:Name="SchoolId"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="Orange"
                   WidthRequest="200"/>
        </Frame>

        <Button x:Name="logInSchoolID"
                BackgroundColor="Black"
                CornerRadius="10" 
                Padding="3" 
                WidthRequest="500"
                BorderColor="Black"
                Text="Create Club"
                TextColor="White"
                Margin="10,20,0,10"
                Clicked="logInSchoolID_Clicked"/>

    </StackLayout>

</ContentPage>
